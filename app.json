{
  "expo": {
    "name": "BuildCRM",
    "slug": "construction-crm",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#1349ec"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.buildcrm.app"
    },
    "android": {
      "package": "com.buildcrm.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "scheme": "buildcrm",
    "plugins": [
      "expo-router"
    ],
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icon.png",
      "name": "BuildCRM - Строительная CRM",
      "shortName": "BuildCRM",
      "description": "Система управления строительными заявками",
      "display": "standalone",
      "startUrl": "/",
      "orientation": "portrait",
      "themeColor": "#000000",
      "backgroundColor": "#ffffff",
      "lang": "ru"
    }
  }
}
